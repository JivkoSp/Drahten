{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Yarp": {
    "routes": {
      "userService-route1": {
        "clusterId": "userService",
        "AuthorizationPolicy": "Default",
        "match": {
          //match ALL incomming requests.
          "path": "/user-service/topics/{**catch-all}"
        }
      },
      "userService-route2": {
        "clusterId": "userService",
        "AuthorizationPolicy": "Default",
        "match": {
          //match ALL incomming requests.
          "path": "/user-service/users/{**catch-all}"
        }
      }
    },
    "clusters": {
      "userService": {
        "destinations": {
          "destination-1": {
            "address": "https://localhost:7284"
          }
        }
      }
    }
  }
}


