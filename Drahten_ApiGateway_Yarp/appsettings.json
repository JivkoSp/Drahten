{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Yarp": {
    "routes": {
      "userService": {
        "clusterId": "userService",
        "match": {
          //match ALL incomming requests.
          "path": "/api/user/{**catch-all}"
        }
      }
    },
    "clusters": {
      "userService": {
        "destinations": {
          "destination-1": {
            "address": "https://localhost:7284"
          }
        }
      }
    }
  }
}
