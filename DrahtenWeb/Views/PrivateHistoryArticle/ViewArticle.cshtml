@model DrahtenWeb.Dtos.TopicArticleService.ArticleDto

<div class="container-fluid">
    <div class="row mt-1">
        <!-- Article Content -->
        <div class="col-md-7 article-content">
            <input id="articleId" type="hidden" value="@Model.ArticleId" />
            <!-- Article Header -->
            <div class="article-header mb-4">
                <h1 class="display-5">@Model.Title</h1>
                <p class="lead">By @Model.Author on @Model.PublishingDate</p>
                <p><a href="@Model.Link" target="_blank" class="btn btn-primary">Read more</a></p>
            </div>
            <!-- Search Bar -->
            <div class="search-bar mb-3">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search...">
                    <button class="btn btn-outline-secondary" type="button">Search</button>
                </div>
            </div>
            <!-- Article Content -->
            <div id="article-data" class="article-data mb-4">
                @Model.Content
            </div>
            <!-- Comments and Likes -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <p class="mb-0">
                    <span id="comment-count">483</span> comments |
                    <span id="like-count">241</span> likes
                </p>
                <div>
                    <i id="like-btn" class="fas fa-thumbs-up like-dislike-btn me-2" title="Like" data-liked="@false"></i>
                    <i id="dislike-btn" class="fas fa-thumbs-down like-dislike-btn" title="Dislike" data-disliked="@false"></i>
                </div>
            </div>
        </div>
        <!-- Question Content -->
        <div class="col-md-5">
            <div class="card question-card ms-5">
                <div class="card-header">
                    Searched Data
                </div>
                <div class="card-body">
                    <h5 class="card-title">Question</h5>
                    <p class="card-text" id="searched-data">data....</p>
                    <h5 class="card-title">Response</h5>
                    <p class="card-text" id="response-data">data...</p>
                    <p class="text-muted">Asked on </p>
                    <!-- User's Like/Dislike Status -->
                    <div class="mt-3">
                        <i id="like-btn-card" class="fas fa-thumbs-up like-dislike-btn me-2" title="Like" data-liked="@false"></i>
                        <i id="dislike-btn-card" class="fas fa-thumbs-down like-dislike-btn" title="Dislike" data-disliked="@false"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>